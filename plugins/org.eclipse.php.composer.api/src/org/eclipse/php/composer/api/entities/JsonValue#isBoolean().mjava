	/**
	 * Returns whether the property is a boolean.
	 * 
	 * @return
	 *         <ul>
	 *         <li><code>true</code> property is a boolean</li>
	 *         <li><code>false</code> property is not a boolean</li>
	 *         </ul>
	 */
	public boolean isBoolean() {
		return value instanceof Boolean;
	}

