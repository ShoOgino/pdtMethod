	private float restoreColumnWeight(final IDialogSettings settings, final String qualifier, final int col) {
		try {
			return settings.getFloat(qualifier + ".column" + col); //$NON-NLS-1$
		} catch (final NumberFormatException e) {
			switch (col) {
				case 1:
					return 2 / 8F;
				default:
					return 3 / 8F;
			}
		}

	}

