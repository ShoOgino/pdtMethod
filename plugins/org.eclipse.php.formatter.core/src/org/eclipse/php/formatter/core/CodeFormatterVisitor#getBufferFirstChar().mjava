	private char getBufferFirstChar() throws BadLocationException {
		for (int offset = 0; offset < replaceBuffer.length(); offset++) {
			char currChar = replaceBuffer.charAt(offset);
			if (currChar != ' ' && currChar != '\t' && currChar != '\r'
					&& currChar != '\n') {
				// not empty line
				return currChar;
			}
		}
		return '\0';
	}

