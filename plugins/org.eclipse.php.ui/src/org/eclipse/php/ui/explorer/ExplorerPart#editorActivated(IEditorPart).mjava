	void editorActivated(final IEditorPart editor) {
		if (!isLinkingEnabled())
			return;
		final Object input = getElementOfInput(editor.getEditorInput());
		if (input == null)
			return;
		if (!inputIsSelected(editor.getEditorInput()))
			showInput(input);
		else
			fViewer.getTree().showSelection();

	}

