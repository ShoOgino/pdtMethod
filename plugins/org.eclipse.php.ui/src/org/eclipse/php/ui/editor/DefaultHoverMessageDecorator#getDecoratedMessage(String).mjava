	public String getDecoratedMessage(String msg) {
		
		String hoverMessage = PHPEditorMessages.HoverFocus_decoration;
		if (hoverMessage.indexOf("{0}") != -1) {
			hoverMessage = NLS.bind(hoverMessage, msg);
		}

		if (hoverMessage != null) {
			return hoverMessage;
		} else {
			return msg;
		}
		
	}

