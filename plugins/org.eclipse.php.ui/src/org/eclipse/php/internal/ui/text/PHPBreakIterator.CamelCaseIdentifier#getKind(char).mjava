        /**
         * Determines the kind of a character.
         *
         * @param ch the character to test
         */
        private int getKind(char ch) {
            if (Character.isUpperCase(ch))
                return K_UPPER;
            if (Character.isLowerCase(ch))
                return K_LOWER;
            if (Character.isJavaIdentifierPart(ch)) // _, digits...
                return K_OTHER;
            return K_INVALID;
        }

