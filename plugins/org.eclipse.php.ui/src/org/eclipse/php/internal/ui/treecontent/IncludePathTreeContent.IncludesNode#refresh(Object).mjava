		protected void refresh(final Object obj) {
			if (treeViewer != null && !treeViewer.getControl().isDisposed()) {
				treeViewer.getControl().getDisplay().asyncExec(new Runnable() {
					public void run() {
						if (treeViewer != null && !treeViewer.getControl().isDisposed()) {
							treeViewer.refresh(obj);
						}
					}
				});
			}
		}

