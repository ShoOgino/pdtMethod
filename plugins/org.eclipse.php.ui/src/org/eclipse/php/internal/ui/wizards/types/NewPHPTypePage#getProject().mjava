	protected IScriptProject getProject() {
		String sourcePath = sourceText.getText();
		if (sourcePath.length() > 0) {
			if (isValidSourcePath(sourcePath)) {
				IProject currProject = getCurrentProject();
				if (currProject != null) {
					return DLTKCore.create(currProject);
				}
			}
		}
		return null;
	}

