	private static IStatus addModified(IStatus status, IFile file) {
		IStatus entry= new Status(IStatus.ERROR, PHPUiPlugin.getPluginId(), NLS.bind("File {0} has been modified since the beginning of the operation", file.getFullPath().toString()));
		if (status == null) {
			return entry;
		} else if (status.isMultiStatus()) {
			((MultiStatus)status).add(entry);
			return status;
		} else {
			MultiStatus result= new MultiStatus(PHPUiPlugin.getPluginId(),
				0,
				"There are modified resources", null); 
			result.add(status);
			result.add(entry);
			return result;
		}
	}	

