	private void updateFont() {
		// TODO : set the font thru the prefernce
		// Font f= JFaceResources.getFont(fSymbolicFontName);
		Font f= JFaceResources.getFont(JFaceResources.TEXT_FONT);
		if (f != null) {
			if (fAncestor != null)
				fAncestor.setFont(f);
			if (fLeft != null)
				fLeft.setFont(f);
			if (fRight != null)
				fRight.setFont(f);
		}
	}

