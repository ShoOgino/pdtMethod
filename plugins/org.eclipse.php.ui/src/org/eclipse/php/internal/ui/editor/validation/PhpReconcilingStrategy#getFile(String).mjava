	/**
	 * @param delta
	 *            the IFileDelta containing the file name to get
	 * @return the IFile
	 */
	public IFile getFile(String delta) {
		IResource res = null;
		try {
			res = ResourcesPlugin.getWorkspace().getRoot()
					.getFile(new Path(delta));
		} catch (Exception e) {
		}
		return res instanceof IFile ? (IFile) res : null;
	}

