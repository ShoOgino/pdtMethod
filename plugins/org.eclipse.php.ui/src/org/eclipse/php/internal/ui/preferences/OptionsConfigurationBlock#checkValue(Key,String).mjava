	/**
	 * Checks a setting.
	 * 
	 * @param key
	 *            a key
	 * @param value
	 *            an assumed value for the key
	 * @return <code>true</code> iff the given key's value is equal to the given
	 *         value
	 */
	protected boolean checkValue(Key key, String value) {
		return value.equals(getValue(key));
	}

