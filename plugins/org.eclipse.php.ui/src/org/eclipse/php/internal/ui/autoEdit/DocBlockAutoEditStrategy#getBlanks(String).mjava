	private String getBlanks(String line) {
		int start;
		start = line.indexOf("/*"); //$NON-NLS-1$
		if (start < 0)
			start = line.indexOf("*"); //$NON-NLS-1$
		if (start >= 0) {
			StringBuffer blanks = new StringBuffer(start);
			for (int i = 0; i < start; ++i)
				if (line.charAt(i) == '\t')
					blanks.append('\t');
				else
					blanks.append(' ');
			return blanks.toString();
		} else {
			return " "; //$NON-NLS-1$
		}

	}

