	public void fillContextMenu(IMenuManager menu) {
		ISelection selection = getSelection();
		if (selection instanceof IStructuredSelection) {
			if (!((IStructuredSelection) selection).isEmpty()) {
				super.fillContextMenu(menu);
			}
		} else {
			super.fillContextMenu(menu);
		}
	}

