	/*
	 * (non-Javadoc)
	 * @see org.eclipse.php.xdebug.core.dbgp.model.DBGpValue#setValue(java.lang.String)
	 */
	public void setValue(String expression) throws DebugException {
		String data;
		if (expression.equals("true")) {
			data = "1";
		} else if (expression.equals("false")) {
			data = "0";
		} else {
			data = expression;
		}
		genValueString(data);
	}

