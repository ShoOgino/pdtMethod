	 */
	public void setValue(String expression) throws DebugException {
		String data;
		if (expression.equals("true")) { //$NON-NLS-1$
			data = "1"; //$NON-NLS-1$
		} else if (expression.equals("false")) { //$NON-NLS-1$
			data = "0"; //$NON-NLS-1$
		} else {
			data = expression;
		}
		genValueString(data);
	}

