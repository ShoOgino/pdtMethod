				// check to see if we have 4 entries now
				if (decodepos == 4) {
					decodepos = 0;
					decoded[outputPos] = (byte) ((base64set[0] << 2) | ((base64set[1] & 0x30) >>> 4));
					outputPos++;
					if (base64set[2] != 64) {
						decoded[outputPos] = (byte) (((base64set[1] & 0x0f) << 4) | ((base64set[2] & 0x3c) >>> 2));
						outputPos++;
