		if (decodepos > 1) {
			// we have some bits left over
			decoded[outputPos] = (byte) ((base64set[0] << 2) | ((base64set[1] & 0x30) >>> 4));
			outputPos++;
			if (decodepos > 2 && base64set[2] != 64) {
