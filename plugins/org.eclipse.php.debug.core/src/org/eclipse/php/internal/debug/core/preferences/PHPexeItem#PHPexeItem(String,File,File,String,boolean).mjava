	/**
	 * Constructs a new PHP executable item.
	 * 
	 * @param name
	 * @param executable
	 * @param iniLocation
	 * @param debuggerID
	 * @param editable
	 */
	public PHPexeItem(String name, File executable, File iniLocation,
			String debuggerID, boolean editable) {
		this();
		this.editable = editable;
		setName(name);
		setExecutable(executable);
		setINILocation(iniLocation);
		setDebuggerID(debuggerID);
		// Detect other properties from PHP executable
		detectFromPHPExe();
	}

