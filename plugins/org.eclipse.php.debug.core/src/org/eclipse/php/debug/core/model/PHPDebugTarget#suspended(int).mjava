    /**
     * Notification the target has suspended for the given reason
     * 
     * @param detail
     *            reason for the suspend
     */
    public void suspended(int detail) {
        fSuspended = true;
        fSuspendCount++;
        System.setProperty("org.eclipse.debugger.variables", "true");
        fThread.fireSuspendEvent(detail);
    }

