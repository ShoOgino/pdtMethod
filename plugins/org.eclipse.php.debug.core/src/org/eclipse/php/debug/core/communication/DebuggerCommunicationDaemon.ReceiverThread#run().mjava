		public void run() {
			try {
				while (isAlive) {
					Socket socket = serverSocket.accept();
					startConnectionThread(socket);
				}
			} catch (IOException e) {
				synchronized (lock) {
					if (isAlive) {
						Logger.logException("Error while listening to incoming debug requests. Listen thread terminated!", e);
						isAlive = false;
					}
				}
			}
		}

