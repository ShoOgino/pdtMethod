	public String getType() {
		switch (getScalarType()) {
			case TYPE_INT:
				return "int"; //$NON-NLS-1$
			case TYPE_REAL:
				return "real"; //$NON-NLS-1$
			case TYPE_STRING:
				return "string"; //$NON-NLS-1$
			case TYPE_UNKNOWN:
				return "unknown"; //$NON-NLS-1$
			case TYPE_SYSTEM:
				return "system"; //$NON-NLS-1$
			default:
				throw new IllegalArgumentException();
		}
	}

