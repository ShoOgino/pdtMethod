	public void visit(Block block) {
		if (block.isCurly()) {
			buffer.append("{\n");
		} else {
			buffer.append(":\n");
		}

		Statement[] statements = block.getStatements();
		for (int i = 0; i < statements.length; i++) {
			statements[i].accept(this);
		}

		if (block.isCurly()) {
			buffer.append("\n}\n");
		} else {
			buffer.append("end;\n");
		}
	}

