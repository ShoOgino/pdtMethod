	/**
	 * Converts a char[][] and a char[] to String, where segments are separated
	 * by '.'.
	 */
	public static String toString(char[][] c, char[] d) {
		if (c == null)
			return new String(d);
		StringBuilder sb = new StringBuilder();
		for (int i = 0, max = c.length; i < max; ++i) {
			sb.append(c[i]);
			sb.append('.');
		}
		sb.append(d);
		return sb.toString();
	}

