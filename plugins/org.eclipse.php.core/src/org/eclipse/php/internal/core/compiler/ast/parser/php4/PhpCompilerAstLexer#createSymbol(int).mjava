	protected Symbol createSymbol(int symbolNumber) {
		Symbol symbol = super.createSymbol(symbolNumber);

		switch (symbolNumber) {
			case PhpParserConstants.T_FUNCTION:
			case PhpParserConstants.T_CONST:
			case PhpParserConstants.T_VAR:
			case PhpParserConstants.T_CLASS:
			case PhpParserConstants.T_STATIC:
				symbol.value = latestDocBlock;
				break;
			case PhpParserConstants.T_EQUAL:
				symbol.value = latestVarComment;
				latestVarComment = null;
				break;
		}

		latestDocBlock = null;
		return symbol;
	}

