	/*
	 * Saves the include-paths mapping to the XML.
	 */
	private void saveMap(Map cachedMap) {
		MapXMLWriter xmlWriter = null;
		try {
			xmlWriter = new MapXMLWriter(new FileOutputStream(includeXMLFile));
			xmlWriter.writeMap(cachedMap);
		} catch (Exception e) {
			PHPCorePlugin.log(e);
		} finally {
			if (xmlWriter != null) {
				xmlWriter.flush();
				xmlWriter.close();
			}
		}
	}

