	public SingleFieldDeclaration(int start, int end, AST ast, Variable name, Expression value) {
		super(start, end, ast);

		if (name == null) {
			throw new IllegalArgumentException();
		}

		this.name = name;
		this.value = value;
		
		this.name.setParent(this, NAME_PROPERTY);
		if (this.value != null) {
			this.value.setParent(this, VALUE_PROPERTY);	
		}		
	}

