	protected static String buildName(Identifier[] segments, boolean global, boolean current) {
		StringBuilder buf = new StringBuilder();
		if (global) {
			buf.append('\\');
		}
		else if (current) {
			buf.append("namespace\\");
		}
		for (int i = 0; i < segments.length; ++i) {
			if (i > 0) {
				buf.append('\\');
			}
			buf.append(segments[i].getName());
		}
		return buf.toString();
	}

