	private void toString(StringBuilder buf, int tabs) {
		String fileName = file.getPath().toOSString();

		if (tabs > 0) {
			for (int i = 0; i < tabs; ++i) {
				buf.append('\t');
			}
			buf.append("|\n");
			for (int i = 0; i < tabs; ++i) {
				buf.append('\t');
			}
			buf.append("+-> ");
		}

		buf.append(fileName).append('\n');
		if (children != null) {
			for (ReferenceTreeNode child : children) {
				child.toString(buf, tabs + 1);
			}
		}
	}

