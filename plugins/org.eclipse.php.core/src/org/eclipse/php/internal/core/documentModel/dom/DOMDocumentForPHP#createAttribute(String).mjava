	/**
	 * createAttribute method
	 * 
	 * @return org.w3c.dom.Attr
	 * @param name
	 *            java.lang.String
	 */
	@Override
	public Attr createAttribute(String name) throws DOMException {
		AttrImplForPHP attr = new AttrImplForPHP();
		attr.setOwnerDocument(this);
		attr.setName(name);
		return attr;
	}

