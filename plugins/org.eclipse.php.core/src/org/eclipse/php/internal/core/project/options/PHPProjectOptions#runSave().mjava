	public void runSave() {
		final WorkspaceJob job = new WorkspaceJob("Project save") { //$NON-NLS-1$
			public IStatus runInWorkspace(IProgressMonitor monitor) throws CoreException {
				try {
					saveChanges(monitor);
				} finally {
					monitor.done();
				}
				return Status.OK_STATUS;
			}
		};
		job.setRule(getProject());
		job.setUser(false);
		job.schedule();
	}

