	private static boolean isPHPNode(IDOMNode node) {
		if (node instanceof PHPElementImpl) {
			return true;
		}
		if (node instanceof TextImpl) {
			TextImpl text = (TextImpl) node;
			if (text.getFirstStructuredDocumentRegion().getType().indexOf("PHP") != -1) {
				return true;
			}
		}
		return false;
	}

