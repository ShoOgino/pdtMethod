	public static PHPNature getNature(IProject project) {
		if (project == null)
			return null;
		try {
			PHPNature nature = null;
			if (project.hasNature(PHPNature.ID))
				nature = (PHPNature) project.getNature(PHPNature.ID);
			return nature;
		} catch (CoreException e) {
			return null;
		}
	}

