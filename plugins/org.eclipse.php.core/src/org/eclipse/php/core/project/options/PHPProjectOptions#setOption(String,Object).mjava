	public void setOption(String key, Object value) {
		assert value != null;
		Object oldValue = options.get(key);
		if (oldValue != null) {
			if (value != null && value.equals(oldValue))
				return;
		} else if (value == null)
			return;
		options.put(key, value);
		runSave();
		notifyOptionChangeListeners(key, oldValue, value);

	}

