	protected IProject[] build(int kind, Map args, IProgressMonitor monitor) throws CoreException {
		if (kind == CLEAN_BUILD) {
			cleanBuild(monitor);
			return null;
		}else if (kind == FULL_BUILD) {
			fullBuild();
			return null;
		}

		IResourceDelta delta = getDelta(getProject());
		if (delta == null) {
			return null;
		}

		buildDelta(delta, monitor);

		return null;
	}

