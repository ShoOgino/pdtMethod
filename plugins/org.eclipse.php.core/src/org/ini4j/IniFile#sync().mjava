	public void sync() throws BackingStoreException {
		if (_mode == MODE_WO)
			throw new BackingStoreException("write only instance"); //$NON-NLS-1$

		try {
			synchronized (lock) {
				getIni().load(_file.toURL(), _mode);
			}
		} catch (final Exception x) {
			throw new BackingStoreException(x);
		}
	}

