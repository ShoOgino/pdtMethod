	/**
	 * Location Object
	 * stores compilation unit, line and column
	 * @param unit      compilation unit, e.g. file name
	 * @param line      line number
	 * @param column    column number
	 */
        public Location(String unit, int line, int column){
            this.unit=unit;
            this.line=line;
            this.column=column;
        }

