	/**
	 * Internal method for parsing a .pdtt test file
	 * 
	 * @param inputStream
	 * @param charsetName
	 *            charset to use (if null, platform's default charset will be
	 *            used)
	 * @throws Exception
	 */
	protected void parse(InputStream inputStream, String charsetName)
			throws Exception {
		BufferedReader bReader = charsetName != null ? new BufferedReader(
				new InputStreamReader(inputStream, charsetName))
				: new BufferedReader(new InputStreamReader(inputStream));

		String line = bReader.readLine();
		STATES state = null;
		while (line != null) {
			if (line.matches("--[A-Z0-9]+--")) {
				state = parseStateLine(line);
				if (state == null) {
					throw new Exception("Wrong state: " + line);
				}
			} else {
				if (state != null) {
					onState(state, line);
				}
			}
			line = bReader.readLine();
		}
	}

