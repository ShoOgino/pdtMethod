	/**
	 * Disables chosen features that might interfere performing tests.
	 * 
	 * @param collider
	 */
	public static void disableColliders(ColliderType collider) {
		switch (collider) {
		case AUTO_BUILD: {
			disableAutoBuild();
			break;
		}
		case WTP_VALIDATION: {
			disableValidation();
			break;
		}
		case LIBRARY_AUTO_DETECTION: {
			disableLibraryDetection();
			break;
		}
		case ALL: {
			disableAutoBuild();
			disableValidation();
			disableLibraryDetection();
			break;
		}
		default:
			break;
		}
	}

