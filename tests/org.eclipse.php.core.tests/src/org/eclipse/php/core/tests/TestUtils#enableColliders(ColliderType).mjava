	/**
	 * Enables chosen features that might interfere performing tests.
	 * 
	 * @param collider
	 */
	public static void enableColliders(ColliderType collider) {
		switch (collider) {
		case AUTO_BUILD: {
			enableAutoBuild();
			break;
		}
		case WTP_VALIDATION: {
			enableValidation();
			break;
		}
		case LIBRARY_AUTO_DETECTION: {
			enableLibraryDetection();
			break;
		}
		case ALL: {
			enableAutoBuild();
			enableValidation();
			enableLibraryDetection();
			break;
		}
		default:
			break;
		}
	}

