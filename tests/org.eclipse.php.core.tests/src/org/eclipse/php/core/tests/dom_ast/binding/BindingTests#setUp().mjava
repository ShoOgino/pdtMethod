		if (project == null) {
			project = ResourcesPlugin.getWorkspace().getRoot().getProject("BindingTests");
			if (project.exists()) {
				return;
			}

			project.create(null);
			project.open(null);

			// configure nature
			IProjectDescription desc = project.getDescription();
			desc.setNatureIds(new String[] { PHPNature.ID });
			project.setDescription(desc, null);
		}
	}

