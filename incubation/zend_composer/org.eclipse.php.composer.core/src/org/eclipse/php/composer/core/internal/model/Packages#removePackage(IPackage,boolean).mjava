	@Override
	public void removePackage(IPackage p, boolean update) {
		IPackage toRemove = null;
		for (IPackage pkg : packages) {
			if (pkg.getName().equals(p.getName())) {
				toRemove = pkg;
				break;
			}
		}
		if (toRemove != null) {
			packages.remove(toRemove);
		}
		if (update) {
			updateModel();
		}
	}

